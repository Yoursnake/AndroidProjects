<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <include
            layout="@layout/view_camera_and_title"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/crime_title_label"
                style="?android:listSeparatorTextViewStyle"
                />

            <EditText
                android:id="@+id/crime_title_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/crime_title_hint"
                style="@style/CrimeFragmentStyle"
                android:maxLines="2"
                />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crime_details_label"
        style="?android:listSeparatorTextViewStyle"
        />

    <Button
        android:id="@+id/crime_date_button"
        android:layout_width="480sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16sp"
        tools:text="2017 3 3 Mon 1:06 PM"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/crime_time_button"
            android:layout_width="480sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            tools:text="10:20 PM"
            />
        <CheckBox
            android:id="@+id/crime_solved_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crime_solved_label"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/crime_suspect"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="0.3"
            android:layout_marginLeft="16dp"
            android:text="@string/crime_suspect_text"
            />

        <Button
            android:id="@+id/crime_call_button"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:drawableLeft="@drawable/ic_button_call"
            android:text="@string/call_the_contacts"
            />

        <Button
            android:id="@+id/crime_report"
            android:layout_width="0sp"
            android:layout_weight="0.5"
            android:layout_height="50sp"
            android:layout_marginRight="16dp"
            android:text="@string/crime_report_text"
            />
    </LinearLayout>


</LinearLayout>